src_install() {
	cargo_src_install

	newbashcomp "contrib/completions/ffsend.bash" ffsend
	if has_version "app-shells/zsh" ; then
		insinto /usr/share/zsh/site-functions
		doins "contrib/completions/_ffsend"
	fi

	einstalldocs
}
